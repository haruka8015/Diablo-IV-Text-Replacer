{
  "manifest_version": 3,
  "name": "Diablo IV Text Replacer",
  "version": "0.6.1",
  "description": "ビルドサイト(mobalytics,d4builds,maxroll)の一部を日本語名に変換します。現状主にmobalytics向けです",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mobalytics.gg/*",
        "*://*.d4builds.gg/*",
        "*://*.maxroll.gg/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["translations.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
