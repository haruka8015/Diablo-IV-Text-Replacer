{
  "manifest_version": 3,
  "name": "Diablo IV Text Replacer",
  "version": "1.1",
  "description": "ディアブロIVの英語表記ビルドサイト(mobalytics,d4builds,maxroll)の英語表記の一部を日本語名に変換します",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mobalytics.gg/*",
        "*://*.d4builds.gg/*",
        "*://*.maxroll.gg/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["translations.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
