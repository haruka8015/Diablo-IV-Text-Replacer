{
  "manifest_version": 3,
  "name": "Text Replacer",
  "version": "1.0",
  "description": "Replace text in a webpage using a predefined translation table.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["translations.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
